<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:padding="2sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_adp_perfil_one"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/cont_description_img"
        android:padding="10sp"
        android:src="@drawable/icon_user_70"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:cardElevation="2sp"
        app:cardMaxElevation="3sp"
        android:layout_margin="5sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_adp_perfil_one"
        app:layout_constraintStart_toEndOf="@+id/id_adp_perfil_one"
        app:layout_constraintTop_toTopOf="@+id/id_adp_perfil_one">
    <TextView
        android:id="@+id/id_adp_conversa_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="16sp"
        android:text="@string/adapter_conversa_user_one"
        android:textSize="16sp"
        android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>